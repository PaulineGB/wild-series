{% extends 'base.html.twig' %}

{% block title %} Modifier la série {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5 text-uppercase">| MODIFIER LA SÉRIE |</h1>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="mb-3 text-center">TITRE</div>
            <div class="text-end">{{ form_errors(form.title) }}</div>
            <div class="mb-3">{{ form_widget(form.title) }}</div>
            <div class="mb-3 text-center">RÉSUMÉ</div>
            <div class="text-end">{{ form_errors(form.summary) }}</div>
            <div class="mb-3">{{ form_widget(form.summary) }}</div>
            <div class="mb-3 text-center">IMAGE</div>
            <div class="text-end">{{ form_errors(form.poster) }}</div>
            <div class="mb-3">{{ form_widget(form.poster) }}</div>
            <div class="mb-3 text-center">PAYS</div>
            <div class="text-end">{{ form_errors(form.country) }}</div>
            <div class="mb-3">{{ form_widget(form.country) }}</div>
            <div class="mb-3 text-center">ANNÉE</div>
            <div class="text-end">{{ form_errors(form.year) }}</div>
            <div class="mb-3">{{ form_widget(form.year) }}</div>
            <div class="mb-3 text-center">CATÉGORIE</div>
            <div class="text-end">{{ form_errors(form.category) }}</div>
            <div class="mb-3">{{ form_widget(form.category) }}</div>
            <div class="mb-3 text-center">ACTEURS</div>
            <div class="text-end">{{ form_errors(form.actors) }}</div>
            <div class="mb-3">{{ form_widget(form.actors) }}</div>
            <div class="d-flex justify-content-center"><button class="btn btn-dark mt-3" type='submit'>Modifier la série</button></div>
        {{ form_end(form) }}

        <div class="supprimer d-flex justify-content-center mt-3 mb-3">
            <button class="btn btn-light"><a data-bs-toggle="modal" data-bs-target="#delete{{ program.id }}">Supprimer cette série</a></button>
            <div class="modal fade" id="delete{{ program.id }}" tabindex="-1" aria-labelledby="delete" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content text-dark">
                        <div class="modal-header">
                            <h5 class="modal-title">Souhaitez-vous supprimer définitivement cette série ?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer">
                            {{ include('program/delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-3 mb-3"><button class="btn btn-dark"><a href="{{ path('program_index') }}" class="text-reset text-decoration-none">Revenir à la liste des séries</a></button></div>
    </div>
{% endblock %}
