{% extends 'base.html.twig' %}

{% block title %} Nouvelle série {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5 text-uppercase">| AJOUTER UNE SÉRIE |</h1>
        <div class="form mt-5 d-flex justify-content-center">
            {{ form_start(form) }}
                <div class="mb-3 text-center">TITRE</div>
                <div class="mb-3">{{ form_widget(form.title) }}</div>
                <div class="mb-3 text-center">RÉSUMÉ</div>
                <div class="mb-3">{{ form_widget(form.summary) }}</div>
                <div class="mb-3 text-center">IMAGE</div>
                <div class="mb-3">{{ form_widget(form.poster) }}</div>
                <div class="mb-3 text-center">PAYS</div>
                <div class="mb-3">{{ form_widget(form.country) }}</div>
                <div class="mb-3 text-center">ANNÉE</div>
                <div class="mb-3">{{ form_widget(form.year) }}</div>
                <div class="mb-3 text-center">CATÉGORIE : {{ form_widget(form.category) }}</div>
                <div class="d-flex justify-content-center"><button class="btn btn-dark mt-3" type='submit'>Ajouter une série</button></div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}