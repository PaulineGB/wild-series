{% extends 'base.html.twig' %}

{% block title %} {{ program.title }} {% endblock %}

{% block content %}
    <div class="container">
        <div class="card cardblack m-5 border-white">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <img class="card-img-top" src="{{program.poster}}" alt="{{ program.title }} poster">
                </div>
                <div class="col-sm-12 col-md-12 col-lg-8">
                    <div class="card-body text-white">
                        <h1 class="mt-5 mb-5 text-uppercase">| {{ program.title }} |</h1>
                        <h3 class="border-top border-bottom border-color-white mb-5">Catégorie : {{ program.category.name }}</h3>
                        <p>{{ program.summary }}</p>
                        <div class="season border-top border-color">
                            <div class="mt-3 mb-3">
                            {% for season in seasons %}
                                <h4><a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}" class="text-reset text-decoration-none">Saison | {{ season.number }}</a></h4>
                            {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="retour d-flex justify-content-center mt-5">
            <button class="btn btn-dark"><a class="text-reset text-decoration-none" href="{{ path('program_index') }}">
                Retour à la liste des séries
            </a></button>
        </div>
    </div>
{% endblock %}
