{% extends 'base.html.twig' %}

{% block title %} Séries {% endblock %}

{% block content %}
    <div class="imageheader d-flex justify-content-center">
        <img src="https://s2.qwant.com/thumbr/700x0/6/3/ace343a517c00af84e72c896173dc2396619611e6bcf1a6516c197a9e63f72/netflix-original-series.jpg?u=https%3A%2F%2Fwww.lepetitshaman.com%2Fwp-content%2Fuploads%2F2018%2F02%2Fnetflix-original-series.jpg&q=0&b=1&p=0&a=0" alt="carroussel">
        <img src="https://s2.qwant.com/thumbr/700x0/6/3/ace343a517c00af84e72c896173dc2396619611e6bcf1a6516c197a9e63f72/netflix-original-series.jpg?u=https%3A%2F%2Fwww.lepetitshaman.com%2Fwp-content%2Fuploads%2F2018%2F02%2Fnetflix-original-series.jpg&q=0&b=1&p=0&a=0" alt="carroussel">
        <img src="https://s2.qwant.com/thumbr/700x0/6/3/ace343a517c00af84e72c896173dc2396619611e6bcf1a6516c197a9e63f72/netflix-original-series.jpg?u=https%3A%2F%2Fwww.lepetitshaman.com%2Fwp-content%2Fuploads%2F2018%2F02%2Fnetflix-original-series.jpg&q=0&b=1&p=0&a=0" alt="carroussel">
    </div>
    <div class="container">
        <h1 class="text-center mt-5">| LES SÉRIES |</h1>
        <div class="row row-col-4">
            {% for program in programs %}
                <div class="col-lg-4 d-flex justify-content-center">
                    <div class="card m-5" style="max-width: 18rem;">
                        <img src="{{ program.poster }}" class="card-img-top" alt="serie cover">
                        <div class="card-body">
                            <h3>{{ loop.index }} | {{ program.title }}</h3>
                            <p class="border-top border-bottom border-color-dark">Catégorie : {{ program.category.name }}</p>
                            <p>{{ program.summary }}</p>
                        </div>
                        <div class="card-footer d-flex justify-content-center">
                            <button class="btn btn-outline-dark"><a class="text-reset text-decoration-none" href="{{ path("program_show", { id: program.id }) }}">Voir la série</a></button>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="fs-3 text-center">Aucune série trouvée.</p>
            {% endfor %}
        </div>
        <div class="retour text-center">
            <button class="btn btn-dark"><a class="text-reset text-decoration-none" href="{{ path('app_index') }}">
                Retour à l'accueil
            </a></button>
        </div>
    </div>
{% endblock %}
