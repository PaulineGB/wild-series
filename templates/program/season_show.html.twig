{% extends 'base.html.twig' %}

{% block title %} {{ program.title }} {% endblock %}

{% block content %}
    <div class="container">
        <div class="card cardblack m-5 border-white">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-4">
                    <img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }} poster">
                </div>
                <div class="col-sm-12 col-md-12 col-lg-8">
                    <div class="card-body text-white">
                        <h1 class="mt-5 mb-5 text-uppercase"> {{ program.title }} | SAISON {{ season.number }}</h1>
                        <p class="mb-3">{{ season.description }}</p>
                        <h4 class="mb-3">Liste des épisodes</h4>
                        <div class="season border-top border-color-white">
                            <div class="mt-3">
                                {% for episode in episodes %}
                                    <a href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id, episodeId: episode.id }) }}" class="text-reset text-decoration-none"><h6 class="fst-italic">{{ episode.number }} | {{ episode.title }}</h6></a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="retour d-flex justify-content-center mt-5">
            <button class="btn btn-dark"><a class="text-reset text-decoration-none" href="{{ path("program_show", { id: program.id }) }}">
                Retour à la fiche de {{ program.title }}
            </a></button>
        </div>
    </div>
{% endblock %}
