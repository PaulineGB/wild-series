{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-center mt-5 mb-5">| S'ENREGISTRER |</h1>

    {{ form_start(registrationForm) }}
        <div class="mt-3 mb-3">{{ form_row(registrationForm.email) }}</div>
        <div class="mt-3 mb-3">{{ form_row(registrationForm.username, {label: 'Pseudo'}) }}</div>
        <div class="mt-3 mb-3">{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}</div>
        <div class="mt-3 mb-3">{{ form_row(registrationForm.agreeTerms, {label: 'J\'accepte les conditions d\'utilisation.'}) }}</div>
        <div class="mt-5 mb-5"><button class="btn btn-lg btn-dark" type="submit">S'enregistrer</button></div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
