{% extends 'base.html.twig' %}

{% block title %} Mon profil {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5 text-uppercase">| MON PROFIL |</h1>
        {% if app.user %}
            <table class="table text-light">
                <tbody>
                    <tr>
                        <th>USERNAME</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>EMAIL</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>PASSWORD</th>
                        <td>*****</td>
                    </tr>
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
