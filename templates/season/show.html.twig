{% extends 'base.html.twig' %}

{% block title %} Saison {{ season.number }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-5 text-uppercase">| SAISON {{ season.number }} |</h1>
        <table class="table text-light">
            <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ season.id }}</td>
                </tr>
                <tr>
                    <th>N°</th>
                    <td>{{ season.number }}</td>
                </tr>
                <tr>
                    <th>ANNÉE</th>
                    <td>{{ season.year }}</td>
                </tr>
                <tr>
                    <th>DESCRIPTION</th>
                    <td>{{ season.description }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-center mt-3 mb-3"><button class="btn btn-dark" href="{{ path('season_index') }}">Revenir à la liste des saisons</button></div>
        <div class="d-flex justify-content-center mt-3 mb-3"><button class="btn btn-dark" href="{{ path('season_edit', {'id': season.id}) }}">Modifier</button></div>
        {{ include('season/_delete_form.html.twig') }}
    </div>
{% endblock %}
