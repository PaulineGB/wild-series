<form method="post" action="{{ path('season_delete', {'id': season.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ season.id) }}">
    <div class="d-flex justify-content-center mt-3 mb-3"><button class="btn btn-dark">Supprimer cette saison</button></div>
</form>
