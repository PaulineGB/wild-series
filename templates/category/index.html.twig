{% extends 'base.html.twig' %}

{% block title %} All categories {% endblock %}

{% block body %}
    <h1 class="text-center mt-5">| Toutes les catégories |</h1>
    {% for category in categories %}
        <div class="mt-5 mb-5">
            <h2>{{ loop.index }} | Catégorie : {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries de cette catégorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
